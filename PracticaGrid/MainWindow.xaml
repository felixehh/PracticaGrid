<Window x:Class="PracticaGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaGrid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="grdContenedor">
        <!-- Definicion de columnas-->
        <Grid.ColumnDefinitions> 
            <!-- cada column definition es una nueva columna, cada columna debe establecer la anchura-->
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left">boton unoo</Button>
        <Button Grid.Column="1">boton dos</Button>
        <Button Grid.Column="2" Grid.Row="1">boton trees</Button>
    </Grid>
</Window>
